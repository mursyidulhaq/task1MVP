<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.DetikActivity">
    <EditText
        android:id="@+id/inputdetik"
        android:layout_width="match_parent"
        android:inputType="number"
        android:hint="inputkan angka"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_height="60dp"
        />
    <Button
        android:id="@+id/convert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputdetik"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:text="convert"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/jam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/convert"
        android:textSize="20dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/menit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/convert"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="50dp"
        android:layout_toRightOf="@+id/jam"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/detik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/convert"
        android:layout_toRightOf="@+id/menit"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>