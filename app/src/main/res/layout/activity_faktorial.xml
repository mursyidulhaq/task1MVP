<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.FaktorialActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <EditText
        android:id="@+id/inputangkafaktorial"
        android:layout_width="match_parent"
        android:inputType="number"
        android:hint="inputkan angka"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_height="60dp"
        />
    <Button
        android:id="@+id/faktorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputdetik"
        android:layout_margin="10dp"
        android:textSize="30dp"
        android:text="Faktorial"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/txthasilfaktorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/convert"
        android:layout_gravity="center"
        android:hint="0"
        android:textSize="40dp" />
</LinearLayout>
</ScrollView>